@{
  // We need to cast to strongly type first
  var contentItem =  Model.ContentItem as ContentItem;
  var eventPart = contentItem.As<EventPart>();
    
}

<div class="date-box">
  @if((eventPart.Periods?.Count ?? 0) != 0) {
    foreach(var period in eventPart.Periods){
      <p>
        <i class="fa fa-calendar" aria-hidden="true"></i> 
        <span>@eventPart.GetFormattedSchedule(period)</span>
      </p>
    }
    <p>
      <i class="fa fa-clock" aria-hidden="true"></i> 
      <span>(UTC+7)</span>
    </p>
  } else {
    <p>
      <i class="fa fa-calendar" aria-hidden="true"></i> 
    </p>
  }
  
  <p>
    <i class="fa fa-map-marker" aria-hidden="true"></i>
    <span>@eventPart.Location</span>
  </p>
  <p>
    <i class="fa fa-ticket-alt" aria-hidden="true"></i>
    @if(eventPart.TicketPrice.HasValue && eventPart.TicketPrice > 0) {
      <span>@eventPart.TicketPrice à¸¿</span>
    } else {
      <span>free</span>
    }
  </p>
</div>